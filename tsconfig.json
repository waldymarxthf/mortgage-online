{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "~pages": ["./pages"],
      "~pages/*": ["./pages/*"],

      "~shared": ["./shared"],
      "~shared/*": ["./shared/*"],

      "~utils": ["./utils"],
      "~utils/*": ["./utils/*"],

      "~components": ["./components"],
      "~components/*": ["./components/*"],

      "~hooks": ["./hooks"],
      "~hooks/*": ["./hooks/*"],

      "~api": ["./api"],
      "~api/*": ["./api/*"],

      "~store": ["./store"],
      "~store/*": ["./store/*"],

      "~context": ["./context"],
      "~context/*": ["./context/*"]
    }
  },
  "include": ["src", "vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
